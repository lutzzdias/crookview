<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/item.css">
    <link rel="stylesheet" href="/css/style.css">

    <title>movie name</title>
</head>

<body>
    <%- include('navbar'); %>

        <section class="movie geral_section">
            <img src="assets\item-image.png" alt="">
            <article>
                <h2>movie name</h2>
                <span>date</span>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Accusamus aut ut, non excepturi eum suscipit
                    sint facilis fugiat, magnam fuga animi quisquam atque perspiciatis laborum illo illum culpa debitis
                    tenetur!</p>
            </article>
        </section>

        <section class="reviews geral_section">
            <h3>Popular reviews:</h3>
            <hr>
            <ul>
                <% reviews.forEach(function(review){ %>
                    <li>
                        <div class="unique_review">
                            <img src="" alt="">

                            <article>
                                <div class="username">
                                    <h3>
                                        <%= review.username %>
                                    </h3>

                                    <ul class="stars">
                                        <li>&#11088;</li>
                                        <li>&#11088;</li>
                                        <li>&#11088;</li>
                                        <li>&#9733;</li>
                                        <li>&#9733;</li>
                                </div>

                                <p contenteditable="false">
                                    <%= review.review %>
                                </p>
                            </article>
                            <div class="edit_del_btns">
                                <button onclick="">&#9998;</button>
                                <button onclick="">&#9746;</button>
                            </div>

                        </div>
                    </li>
                    <% }); %>
            </ul>


            </article>

            <hr>
            </li>

            </ul>
        </section>

        <section class="add_review_area geral_section">
            <h3>Add a review</h3>
            <form method="post" action="/api/review">
                <textarea name="new_review" id="">aaa</textarea>
                <div>
                    <ul class="stars">
                        <li>&#11088;</li>
                        <li>&#11088;</li>
                        <li>&#11088;</li>
                        <li>&#9733;</li>
                        <li>&#9733;</li>
                    </ul>

                    <button name="new_review" class="add_button" type="submit">ADD</button>

                </div>
            </form>
        </section>

        <section class="similar_movies geral_section">
            <h3>Similar Movies</h3>
            <hr>
            <ul class="movie_flex_list">
                <% movies.forEach(function(movie){ %>
                    <li class="card">

                        <div>
                            <h3>
                                <%= movie.title %>
                            </h3>
                            <p>
                                <%= movie.desc %>
                            </p>
                        </div>
                    </li>

                    <% }); %>
            </ul>

        </section>
</body>

</html>