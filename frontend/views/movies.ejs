<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/movies.css">

    <title>Movies</title>
</head>

<body>

    <%- include('navbar'); %>

        <section class="geral_section">

            <h1>Movies</h1>

            <ul class="movies">
                <% movies.forEach(function(movie){ %>
                    <a href="<%= movie.id %>">
                        <li class="card">
                            <img src="data:image/png;base64,<%- movie.image  %>" alt="">
                            <div>
                                <%= movie.title %>
                                    <p>
                                        <%= movie.description %>
                                    </p>
                            </div>
                        </li>
                    </a>

                    <% }); %>
            </ul>
        </section>

</body>

</html>